{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "Boiler Plate for creating a node app",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^5.0.1",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "express-validator": "^2.20.8",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "joi": "^13.3.0",
    "jsonwebtoken": "^8.2.1",
    "jwt-simple": "^0.5.1",
    "moment-timezone": "^0.5.13",
    "morgan": "^1.9.0",
    "pm2": "^2.4.6",
    "sequelize": "^4.37.10",
    "uuid": "^3.1.0",
    "yarn": "^1.7.0"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  },
  "scripts": {
    "precommit": "yarn lint",
    "start": "cross-env NODE_ENV=production pm2 start ./index.js",
    "dev": "nodemon ./index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/*/tests --require babel-polyfill",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "postpublish": "git push --tags"
  },
  "author": "Zach Moore",
  "license": "ISC"
}
